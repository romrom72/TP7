
<h2>Liste des contacts</h2>
<div class="container-fluid">
    <div class="row">
        <form method="post" action="Contact">
            <div class="row">
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" name="Filter" class="form-control" value=@ViewBag.Filter />
                        <span class="input-group-btn">
                            <button class="btn btn-default" value="Submit" type="button">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
            </div><!-- /.row -->
        </form>
    </div>

    <div class="row">
        <table class="table table-striped">
            <tr>
                <td>
                    Prénom
                </td>
                <td>
                    Nom
                </td>
                <td>
                    Email
                </td>
                <td>
                    Téléphone
                </td>
            </tr>
            @foreach (var item in @ViewBag.List)
            {
                <tr>
                    <td>
                        @(item.FirstName)
                    </td>
                    <td>
                        @(item.LastName)
                    </td>
                    <td>
                        @(item.Email)
                    </td>
                    <td>
                        @(item.Phone)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>