
<h2>Liste des contacts</h2>
<form method="post" action="Index">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="Filter" class="form-control" value=@ViewBag.Filter />
                <span class="input-group-btn">
                    <button class="btn btn-default" value="Submit" type="button">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
</form>
<br/>
<div class="container">
    <div class="row">
        <table class="table table-striped">
            <tr>
                <td>
                    Prénom
                </td>
                <td>
                    Nom
                </td>
                <td>
                    Email
                </td>
                <td>
                    Téléphone
                </td>
                <td>
                    Action
                </td>
            </tr>
            @foreach (var item in @ViewBag.List)
            {
                <tr>
                    <td>
                        @(item.firstName)
                    </td>
                    <td>
                        @(item.lastName)
                    </td>
                    <td>
                        @(item.email)
                    </td>
                    <td>
                        @(item.phone)
                    </td>
                    <td>
                        <a href="Contact/Show" class="btn btn-default">Show</a>
                        <a href="Contact/Update" class="btn btn-primary">Editer</a>
                        <a href="" class="btn btn-danger" data-confirm="sur?" data-method="DELETE">Suppression</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="row">
        <button class="btn btn-info btn-md col-lg-12" onclick="window.location.href='Contact/add'">Ajouter un utilisateur</button>
    </div>
</div>

